 #include <errno.h>
 #include <fcntl.h>
 #include <pthread.h>
-#include "alloca.h"
+#ifdef HAVE_ALLOCA_H
+#include <alloca.h>
+#endif
 
 #include "misc.h"
 #include "pcscd.h"
