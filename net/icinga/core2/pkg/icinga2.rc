daemon="${TRUEPREFIX}/sbin/icinga2 daemon -d"
daemon_user="_icinga"

. /etc/rc.d/rc.subr

pexp="${TRUEPREFIX}/sbin/icinga2.*daemon${daemon_flags:+ ${daemon_flags}}"
rc_bg=YES # XXX Should not be needed with -d!

rc_pre() {
	install -d -o ${daemon_user} /var/run/icinga2{,/cmd}
}

rc_cmd $1
