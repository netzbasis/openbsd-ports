         }
+        $trimmedBase = preg_replace('|^/var/www|','',$baseDir);
+        if (realpath($trimmedBase) === realpath($baseDir)) {
+            $baseDir = $trimmedBase;
+        }
         $this->baseDir = $baseDir;
         $this->appDir = $baseDir . '/application';
         $this->vendorDir = $baseDir . '/library/vendor';
