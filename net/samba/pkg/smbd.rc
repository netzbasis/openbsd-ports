#!/bin/sh
#
# $OpenBSD: smbd.rc,v 1.7 2015/08/25 11:07:45 jca Exp $

smbcontrol="${TRUEPREFIX}/bin/smbcontrol"

daemon="${TRUEPREFIX}/sbin/smbd -D"

. /etc/rc.d/rc.subr

rc_usercheck=NO

rc_check() {
	${smbcontrol} smbd ping
}

rc_reload() {
	${smbcontrol} smbd reload-config
}

rc_stop() {
	${smbcontrol} smbd shutdown
}

rc_cmd $1
