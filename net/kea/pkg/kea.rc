#!/bin/ksh
#
# $OpenBSD: kea.rc,v 1.3 2018/01/11 19:27:06 rpe Exp $

daemon="${TRUEPREFIX}/sbin/keactrl"

. /etc/rc.d/rc.subr

pexp="${TRUEPREFIX}/sbin/kea-dhcp(4|6|-ddns).*"

rc_pre() {
	if ! [ -d ${LOCALSTATEDIR}/run/kea ]; then
		install -d -o root -g _kea -m 775 ${LOCALSTATEDIR}/run/kea
	fi
}

rc_start() {
	${rcexec} "${daemon} start"
}

rc_reload() {
	${daemon} reload
}

rc_stop() {
	${daemon} stop
}

rc_cmd $1
